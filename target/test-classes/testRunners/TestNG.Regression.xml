<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="OpenCart TestNG Suite" thread-count="2"
	parallel="tests">

	<listeners>
		<listener
			class-name="com.qa.WordPress.testListeners.ExtentReportListener" />
		<listener 
			class-name="com.qa.WordPress.testListeners.TesultsListener"/>
	</listeners>
	
	<test name="LoginPage Test">
		<classes>
			<class name="com.qa.WordPress.tests.LoginPageTest" />
		</classes>
	</test>
	<test name="AccountPage Test">
		<classes>
			<class name="com.qa.WordPress.tests.AccountPageTest" />
		</classes>
	</test>
	<test name="ProductInfoPage Test">
		<classes>
			<class name="com.qa.WordPress.tests.ProductInfoPageTest" />
		</classes>
	</test>
</suite> 